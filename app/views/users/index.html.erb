<div class="users index">
  <h2>Users</h2>

  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="User list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Users</th>
      <th>Passwords</th>
      <th>Emails</th>
      <th>Albums</th>
      <th>Photos</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.user_name %></td>
      <td class="center"><%= user.password %></td>
      <td class="center"><%= user.email %></td>
      <td class="center"><%= user.albums.size %></td>
      <td class="center"><%= user.photos.size %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", '#', :class => 'action edit') %>
        <%= link_to("Delete", '#', :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
